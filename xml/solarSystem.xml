<world>
    <window width="512" height="512" axis="true"/>
    <camera type="fps">
        <position x="10" y="0" z="30" />
        <lookAt x="10" y="0" z="0" />
        <up x="0" y="1" z="0" />
        <projection fov="60" near="1" far="1000" />
    </camera>

<!-- Planetas gasosos sao 5x maiores do que a escala -->
<!-- Planetas terrestres sao 10x maiores do que a escala -->
<!-- Todas as distâncias foram cortadas 50x, exceto a distancia terra-lua, q foi cortada 25x -->

    <group> <!-- Sol -->
        <models><model file="models/sphere.3d" color="#fdb813"/></models>
        <transform>
            <scale s="1"/>
        </transform>

        <group> <!-- Mercúrio -->
            <models><model file="models/sphere.3d" color="#8c8c94"/></models>
            <transform>
                <translate x="1.67" y="0" z="0"/>
                <scale s="0.035"/>
            </transform>
        </group>

        <group> <!-- Vénus -->
            <models><model file="models/sphere.3d" color="#c18f17"/></models>
            <transform>
                <translate x="3.1" y="0" z="0"/>
                <scale s="0.087"/>
            </transform>

        </group>

        <group> <!-- Terra -->
            <models><model file="models/sphere.3d" color="#6b93d6"/></models>
            <transform>
                <translate x="4.3" y="0" z="0"/>
                <scale s="0.091"/>
            </transform>

            <group> <!-- Lua -->
                <models><model file="models/sphere.3d" color="#f6f1d5" /></models>
                <transform>
                    <translate x="2.42" y="0" z="0"/>
                    <scale s="0.2725"/>
                </transform>

            </group>

        </group>

        <group> <!-- Marte -->
            <models><model file="models/sphere.3d" color="#c1440e"/></models>
            <transform>
                <translate x="6.55" y="0" z="0"/>
                <scale s="0.049"/>
            </transform>

        </group>

        <group> <!-- Júpiter -->
            <models><model file="models/sphere.3d" color="#d8ca9d"/></models>
            <transform>
                <translate x="22.35" y="0" z="0"/>
                <scale s="0.502"/>
            </transform>

        </group>

        <group> <!-- Saturno -->
            <models>
                <model file="models/sphere.3d" color="#e3e0c0"/>
                <model file="models/donut.3d" color="#dbb57c"/>
            </models>
            <transform>
                <translate x="40.21" y="0" z="0"/>
                <scale s="0.4180"/>
                <rotate x="0" y="0" z="1" angle="-30"/>
            </transform>

        </group>

        <group> <!-- Urano -->
            <models><model file="models/sphere.3d" color="#c6d3e3"/></models>
            <transform>
                <translate x="83.29" y="0" z="0"/>
                <scale s="0.1820"/>
            </transform>

        </group>

        <group> <!-- Neptuno -->
            <models><model file="models/sphere.3d" color="#274687"/></models>
            <transform>
                <translate x="129.25" y="0" z="0"/>
                <scale s="0.177"/>
            </transform>

        </group>

        <group> <!-- Plutão -->
            <models><model file="models/sphere.3d" color="#f6ddbd"/></models>
            <transform>
                <translate x="169.46" y="0" z="0"/>
                <scale s="0.017"/>
            </transform>

        </group>

    </group>
</world>